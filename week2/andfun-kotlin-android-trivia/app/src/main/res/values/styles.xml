<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Theme customization. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="profile_titlestyle">
        <item name="android:layout_marginTop">@dimen/profile_smallmargin</item>
        <item name="android:background">#0B6C63</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:paddingTop">@dimen/profile_smallpadding</item>
        <item name="android:paddingBottom">@dimen/profile_smallpadding</item>
        <item name="android:textColor">@color/design_default_color_background</item>
        <item name="android:textSize">@dimen/profile_titletextsize</item>
    </style>

    <style name="profile_contenttextstyle">
        <item name="android:layout_marginTop">@dimen/profile_smallmargin</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textColor">@color/design_default_color_on_secondary</item>
        <item name="android:textSize">@dimen/profile_textcontentsize</item>
    </style>
</resources>
